.btn-block {
  width: 80%;
  height: 50px;
  border-radius: 15px;
  border: 4rpx solid #fff;
  overflow: hidden;
  background-color: #2ccf8c;
  position: fixed;
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-50%, 400%);
          transform: translate(-50%, 400%);
  color: #fff;
  text-align: center;
}
.sgscroll {
  height: 100vh;
}
.sglist {
  display: flex;
  flex-direction: column;
}
.sglist-item {
  margin-bottom: 15rpx;
  background: #fff;
  box-shadow: 0rpx 5rpx 10rpx #d7d7d7;
}
.sglist-item .sglist-view {
  width: 95vw;
  margin: 0 auto;
  padding: 20rpx 10rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}
.sglist-item .sglist-title {
  width: 600rpx;
  font-size: 30rpx;
  margin-top: 4px;
}
.sglist-item .sglist-desc {
  font-size: 35rpx;
  font-weight: 700;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.sglist-item .sglist-desc .sglist-content {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  padding-right: 10rpx;
  margin-top: 6px;
}
.sglist-item .sglist-desc .sglist-imglist image {
  width: 45rpx;
  height: 50rpx;
  border-radius: 10rpx;
}
.sglist-item .sglist-flow {
  font-size: 28rpx;
  font-weight: 500;
  margin-top: 6px;
}
.sglist-item .sglist-flow text {
  margin-right: 20rpx;
}
