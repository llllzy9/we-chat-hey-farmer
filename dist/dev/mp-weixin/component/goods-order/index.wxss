.list {
  width: 672rpx;
  height: 208rpx;
  background: #fff;
  box-shadow: 0 8rpx 16rpx 0 rgba(83, 66, 49, 0.08);
  border-radius: 24rpx;
  margin-top: 32rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.list .left {
  display: flex;
}
.list .left .img {
  width: 136rpx;
  height: 136rpx;
  margin-left: 10rpx;
  border-radius: 8%;
}
.list .center {
  width: 170rpx;
  display: flex;
  height: 136rpx;
  flex-direction: column;
  justify-content: space-between;
}
.list .center .name {
  font-size: 26rpx;
  color: #3E3E3E;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.list .center .size {
  font-size: 22rpx;
  color: #8D8D8D;
}
.list .center .price {
  color: #DD6C26;
  font-weight: bold;
}
.list .right {
  display: flex;
  height: 136rpx;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.list .right .count {
  font-size: 22rpx;
  color: #8D8D8D;
}
.list .right .types {
  width: 120rpx;
  height: 50rpx;
  display: inline-block;
  text-align: center;
  color: #FFFFFF;
}
.list .right .types_dfk,
.list .right .types_dfh,
.list .right .types_dsh {
  color: #2994FA;
}
.list .right .types_ywc {
  color: #0BC261;
}
.list .right .types_yqx {
  color: #FF976A;
}
